{
  "manifest_version": 3,
  "name": "Job Application Auto-Filler",
  "version": "1.0",
  "description": "Automatically fills job application forms with your saved data.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}